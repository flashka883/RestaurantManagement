@model Models.Client

<h2>Delete</h2>

<h4>Client</h4>
<hr />
<div>
    <h4>Are you sure you want to delete this?</h4>
    <div>
        <h4>@Model.FirstName @Model.LastName</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Email
            </dt>
            <dd class="col-sm-10">
                @Model.Email
            </dd>
            <dt class="col-sm-2">
                Phone
            </dt>
            <dd class="col-sm-10">
                @Model.Phone
            </dd>
            <dt class="col-sm-2">
                Address
            </dt>
            <dd class="col-sm-10">
                @Model.Address
            </dd>
        </dl>
    </div>
    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="ClientID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
